/** FONT **/
body {
font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;
font-weight: 300;
}
/** MENU PRINCIPAL **/
.menu-principal {
background: transparent;
z-index:500 !important;
}
.menu-principal .menuparent ul{
background-image:none !important;
background-color:rgba(88,88,88,0.6) !important;
}
/** PARA LA SELECCION DEL MENU **/
#menu-368-1 :hover {
background: #488847;
z-index:500 !important;
}
#menu-369-1 :hover {
background: #104f79;
z-index:500 !important;
}
/** PARA EL CONTEXTO **/
#menu-368-1 .page-consultoria {
background: #488847;
z-index:500 !important;
}
#menu-369-1 .page-capacitacion {
background: #104f79;
z-index:500 !important;
}
.menu-links {
padding:15px 10px 10px 15px;
}
.menu-links:hover{
text-decoration: none;
}
.menu-links.menuparent {
z-index:500 !important;
width: 120px;
margin-left: -15px;
text-align: center;
font-weight:bold
-webkit-border-top-left-radius: 30px;
-webkit-border-top-right-radius: 15px;
-moz-border-radius-topleft: 30px;
-moz-border-radius-topright: 15px;
border-top-left-radius: 30px;
border-top-right-radius: 15px;
border: 2px inset #f1f1f1;
background: rgba(203,203,203,1);
background: -moz-linear-gradient(top, rgba(203,203,203,1) 0%, rgba(255,255,255,1) 91%, rgba(255,255,255,1) 100%);
background: -webkit-gradient(left top, left bottom, color-stop(0%, rgba(203,203,203,1)), color-stop(91%, rgba(255,255,255,1)), color-stop(100%, rgba(255,255,255,1)));
background: -webkit-linear-gradient(top, rgba(203,203,203,1) 0%, rgba(255,255,255,1) 91%, rgba(255,255,255,1) 100%);
background: -o-linear-gradient(top, rgba(203,203,203,1) 0%, rgba(255,255,255,1) 91%, rgba(255,255,255,1) 100%);
background: -ms-linear-gradient(top, rgba(203,203,203,1) 0%, rgba(255,255,255,1) 91%, rgba(255,255,255,1) 100%);
background: linear-gradient(to bottom, rgba(203,203,203,1) 0%, rgba(255,255,255,1) 91%, rgba(255,255,255,1) 100%);
filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#cbcbcb', endColorstr='#ffffff', GradientType=0 );
}
.menu-links.menuparent .sf-sub-indicator{
display:none;
}
.sf-depth-1.menu-links {
z-index:500 !important;
width: 120px;
margin-left: -15px;
text-align: center;
-webkit-border-top-left-radius: 30px;
-webkit-border-top-right-radius: 15px;
-moz-border-radius-topleft: 30px;
-moz-border-radius-topright: 15px;
border-top-left-radius: 30px;
border-top-right-radius: 15px;
border: 2px inset #f1f1f1;
